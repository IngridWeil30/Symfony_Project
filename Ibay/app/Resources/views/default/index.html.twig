{% extends 'base.html.twig' %}

{% block body %}

    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>IBAY</title>

        <!-- Bootstrap core CSS -->
        <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

        <!-- Custom styles for this template -->
        <link href="css/shop-homepage.css" rel="stylesheet">

    </head>

    <body>

    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <div class="col-lg-3">

                <h1 class="my-4">Marketplace</h1>
                <div class="list-group">
                    {% for category in parent_categories %}
                        <a href="/category/{{ category.id }}" class="list-group-item">{{ category.title }}</a>
                        {% for child in category.children %}
                            <a href="/category/{{ child.id }}" class="list-group-item2">{{ child.title }}</a>

                        {% endfor %}
                    {% endfor %}
                    {#variable créée et passée au controller#}
                    {#{% if parent_categories is empty %}#}
                    {#<li>{{ "No category" }}</li>#}
                    {#{% else %}#}
                    {#on balaye l'array créé précédemment#}
                    {#{% for i in 0..(sizeparent_categories -1) %}#}
                    {#title : dans le var_dump il s'agit de l'info que l'on veut récupérer#}

                    {#<a href="/category" class="list-group-item">{{ parent_categories[i]['title'] }}</a>#}
                    {#{% endfor %}#}
                    {#{% endif %}#}
                    <br>
                    {#<p>Subcategories</p>#}
                    {#{% if subcategory_name is empty %}#}
                    {#<li>{{ "No subcategory" }}</li>#}
                    {#{% else %}#}
                    {#on balaye l'array créé précédemment#}
                    {#{% for i in 0..(sizesubcategory_name -1) %}#}
                    {#title : dans le var_dump il s'agit de l'info que l'on veut récupérer#}

                    {#<a href="/category" class="list-group-item">{{ subcategory_name[i]['title'] }}</a>#}
                    {#{% endfor %}#}
                    {#{% endif %}#}
                </div>

            </div>
            <!-- /.col-lg-3 -->

            <div class="col-lg-9">

                <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active">
                            <img class="d-block img-fluid"
                                 src="https://images-eu.ssl-images-amazon.com/images/G/08/kindle/merch/2018/campaign/tpr/mday/mday_mus-GW_Hero-d-fr-1500x300._CB495082990_.jpg"
                                 alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block img-fluid"
                                 src="https://images-eu.ssl-images-amazon.com/images/G/08/product/hi/renovation17/1041348_FR_HI_renovation_Apr21_1500x300_GW_desktop._CB529388696_.jpg"
                                 alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block img-fluid"
                                 src="https://images-eu.ssl-images-amazon.com/images/G/08/FRgateway/mothersday2018/traffic/shibania_2018-04-18T11-58_455c1a_1109908_FR_Xsite_1500x300._CB497368719_.jpg"
                                 alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

                <div class="row">
                    {% for product in products %}
                        {% if product.isSold != 1 %}
                            <div class="col-lg-4 col-md-6 mb-4">
                                <div class="card h-100">
                                    <a href="#"><img class="card-img-top" src="{{ product.urlimage }}" height="250px"
                                                     width="250px" alt=""></a>
                                    <div class="card-body">
                                        <h4 class="card-title">
                                            <a href="{{ path('product_show', { 'id': product.id }) }}">
                                                {{ product.title }}
                                            </a>
                                        </h4>
                                        <h5>${{ product.price }}</h5>
                                        <p class="card-text">{{ product.description }}</p>
                                    </div>
                                    {#    <div class="card-footer">
                                            <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                                        </div>#}
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}

                </div>

            </div>
            <!-- /.row -->

        </div>
        <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

    </div>
    <!-- /.container -->

    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    </body>

    </html>

{% endblock %}
